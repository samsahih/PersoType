<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PersoType</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersoType.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="landingScreen"><div class="desktopDiv">Click anywhere to start</div><div class="PhoneTabletDiv">Tap anywhere to start</div></div>
    <div id="finishScreen">
        <div style="top: 40%;">Calculating results</div>
        <div class="snippet" data-title=".dot-overtaking">
          <div class="stage filter-contrast">
            <div class="dot-overtaking"></div>
          </div>
        </div>
        <div id="resultString"></div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>